<!DOCTYPE html>
<html>
<head>
  <title>Concertnetwork</title>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="full-background">
	
	<div id="wrapper">
		<div id="header">
			<nav class="navbar navbar-default header-container row">
			  <div class="col-sm-7">
			  	<form class="navbar-form navbar-left" role="search">
		        	<div class="form-group">
		          		<input type="text" class="form-control" placeholder="Search">
		        	</div>
		        	<button type="submit" class="btn btn-default">Submit</button>
		      	</form>
			  </div>
			  <div class="container-fluid col-sm-5">
			    <!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      <ul class="nav navbar-nav">
			      	<li><a href="/concerts">Show All</a></li>
			        <li><a href="/featured">Featured</a></li>
			        <li><a  href="/today">Today</a></li>
			        <li><a href="/thismonth">This Month</a></li>
			        <li><a href="/concerts/new">Add</a></li>
			        <% if(!current_user().present?) %>
			        	<li><a href="/users/new">Signup</a></li>
			        	<li><a class="login-btn" href="/login">Login</a></li>
			        <% else %>
			        	<li><a class="login-btn" href="/logout" data-method="delete">Logout <%=current_user.username%></a></li>
			        <% end %>
			      </ul>
			    </div>
			  </div>
			</nav>
		</div>
		<div class="container" id="content">
			<div class="row main-content-wrapper">
				<%= yield %>
			</div>
		</div>
		<div id="footer">
			<nav class="navbar navbar-default footer-container row">
			  <div class="col-sm-7">
			  	<form class="navbar-form navbar-left" role="search">
		        	<div class="form-group">
		          		<input type="text" class="form-control" placeholder="Search">
		        	</div>
		        	<button type="submit" class="btn btn-default">Submit</button>
		      	</form>
			  </div>
			  <div class="container-fluid col-sm-5">
			    <!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      <ul class="nav navbar-nav">
			      	<li><a href="/concerts">Show All</a></li>
			        <li><a href="/featured">Featured</a></li>
			        <li><a  href="/today">Today</a></li>
			        <li><a href="/thismonth">This Month</a></li>
			        <li><a href="/concerts/new">Add</a></li>
			        <% if(!current_user().present?) %>
			        	<li><a href="/users/new">Signup</a></li>
			        	<li><a class="login-btn" href="/login">Login</a></li>
			        <% else %>
			        	<li><a class="login-btn" href="/logout" data-method="delete">Logout <%=current_user.username%></a></li>
			        <% end %>
			      </ul>
			    </div>
			  </div>
			</nav>
		</div>
	</div>



